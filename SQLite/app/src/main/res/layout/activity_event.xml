<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bakhtiyar.helloauthentication.EventActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write a Event"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edexpence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Write Expence"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_margin="20dp"
                    android:textColor="#fff"

                    android:textSize="15sp"
                    android:id="@+id/eventsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Submit"

                    android:background="@drawable/button"
                    android:shadowColor="#1499A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_margin="20dp"
                    android:textColor="#fff"

                    android:textSize="15sp"
                    android:id="@+id/eventRead"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Read"

                    android:background="@drawable/button"
                    android:shadowColor="#1499A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:id="@+id/searchevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Event for Search"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <Button
                    android:layout_margin="20dp"
                    android:textColor="#fff"

                    android:textSize="15sp"
                    android:id="@+id/eventbtnsearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Find"

                    android:background="@drawable/button"
                    android:shadowColor="#1499A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_gravity="center"/>


            </LinearLayout>
        </ScrollView>

        <ListView

            android:id="@+id/eventList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
