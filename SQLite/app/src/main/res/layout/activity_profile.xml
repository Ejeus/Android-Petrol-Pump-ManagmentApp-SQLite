<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"

    tools:context="com.example.bakhtiyar.helloauthentication.ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bb" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_margin="5dp"
                android:id="@+id/employ"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"

                android:textColor="#fff"
                android:textStyle="bold"
                android:text="For Employees Management"

                android:background="@drawable/button"
                android:shadowColor="#1499A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center"/>

            <Button
                android:layout_margin="5dp"

                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/product"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="For Product Management"

                android:background="@drawable/button"
                android:shadowColor="#1499A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:id="@+id/boss"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="For Boss Visit"

                android:background="@drawable/button"
                android:shadowColor="#1499A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center"/>

            <Button

                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:id="@+id/event"
                android:layout_width="5dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="For Any Event"

                android:background="@drawable/button"
                android:shadowColor="#1499A8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:layout_gravity="center"/>

        </LinearLayout>


        <Button
            android:layout_margin="5dp"

            android:textColor="#fff"
            android:textStyle="bold"

            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogOut"

            android:background="@drawable/button"
            android:shadowColor="#1499A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:layout_margin="5dp"
                android:id="@+id/Hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="abcd"
                android:scaleType="centerCrop"
                android:src="@drawable/aaa"


                />


        </LinearLayout>

        <Button
            android:layout_margin="5dp"

            android:textColor="#fff"

            android:id="@+id/discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Application Discription"
            android:textStyle="bold"

            android:background="@drawable/button"
            android:shadowColor="#1499A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>
